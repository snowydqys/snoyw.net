---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";

import clarapfp from "../assets/clara_pfp.jpg"; // Image is 184x184px
import paws from "../assets/twemoji_paw.svg"; // Image is 184x184px
import { Image } from "astro:assets";
---

<Layout
  title="snowydqys"
  description="hii im snowydqys, your amateur anime degenerate!!"
