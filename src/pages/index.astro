</Layout>

<script>
  // @ts-ignore
  import Konami from "konami";

  let susified = false;

  const konami = new Konami(() => {
    if (!susified) {
      const audio = new Audio("/sus.mp3");
      audio.play();

      susified = true;

      const snows = document.querySelectorAll(
        ".snow"
      ) as NodeListOf<HTMLElement>;

      snows.forEach((snow) => {
        snow.style.background = `url("/sus.svg")`;
      });

      const snowWrapper = document.querySelector(
        ".snow-wrapper"
      ) as HTMLElement;

      snowWrapper.style.filter = "drop-shadow(0 0 10px #f00000)";

      const subHeading = document.getElementById("sub-heading") as HTMLElement;
      subHeading.innerText = "The Impostor";

      const mainText = document.getElementById("main-text") as HTMLElement;
      mainText.innerText =
        "WHEN THE IMPOSTOR IS SUS WHEN THE IMPOSTOR IS SUS WHEN THE IMPOSTOR IS SUS WHEN THE IMPOSTOR IS SUS";

      const avatar = document.querySelector(".avatar") as HTMLElement;
      avatar.classList.add("avatar-sus");
      avatar.classList.remove("avatar");
    } else {
      const audio = new Audio("/amongus.mp3");
      audio.volume = 0.5;
      audio.play();
    }
  });
</script>

<style lang="scss">
  .avatar {
    border: 2px solid transparent;
    border-radius: 100%;
    background: linear-gradient(0deg, rgb(189, 218, 233), #85d4ff) border-box;
  }

  .avatar-sus {
    border: 2px solid transparent;
    border-radius: 100%;
    background: linear-gradient(0deg, #ff0000, #ffafaf) border-box;
  }

  .fuwamoco-link {
    /* text gradient */
    background: linear-gradient(
      45deg,
      rgba(86, 180, 254, 1) 0%,
      rgba(171, 169, 226, 1) 50%,
      rgba(255, 157, 198, 1) 100%
    );
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;

    /* underline gradient */
    position: relative;
    &::before {
      content: "";
      position: absolute;
      top: 95%;
      width: 100%;
      left: 0;
      height: 1px;
      background: linear-gradient(
        45deg,
        rgba(86, 180, 254, 1) 0%,
        rgba(171, 169, 226, 1) 50%,
        rgba(255, 157, 198, 1) 100%
      );
    }
  }
</style>
